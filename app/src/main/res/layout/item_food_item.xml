<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvFoodItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorPrimary"
            tools:text="Pizza Margherita"/>

        <TextView
            android:id="@+id/tvFoodItemDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            tools:text="Classic pizza with tomato and mozzarella."/>

        <TextView
            android:id="@+id/tvFoodItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="?android:attr/textColorTertiary"
            tools:text="Price: $12"/>

        <TextView
            android:id="@+id/tvFoodItemSupply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            tools:text="In Stock: 50"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnEditFoodItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/edit_button_text"
                android:layout_marginEnd="4dp"
                style="?attr/materialButtonOutlinedStyle"/>

            <Button
                android:id="@+id/btnDeleteFoodItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/delete_button_text"
                android:layout_marginStart="4dp"
                android:backgroundTint="@color/orange_primary_dark"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>